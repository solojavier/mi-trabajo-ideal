<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="/"><%= @answer.company.capitalize %> - Mi Trabajo Ideal</a>
  </div>
</nav>

<%= form_for(@answer) do |f| %>

  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
        <% @answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :company %>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('welcome') %></div>
    <div class="panel-body">
      <div class="from-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control'%>
      </div>
    </div>
    <div class="panel-footer"></div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('company_attributes') %></div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.text_field :company_attribute_1, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :company_attribute_2, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :company_attribute_3, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :company_attribute_4, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :company_attribute_5, class: 'form-control' %>
      </div>
    </div>
    <div class="panel-footer"></div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('action_taken') %></div>
    <div class="panel-body">
      <h4><%= t('action_taken_sub') %></h4>
      <div class="form-group">
        <%= f.label :action_taken %><br>
        <%= f.text_field :action_taken, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :action_date %><br>
        <%= f.date_select :action_date %>
      </div>
      <div class="form-group">
        <%= f.label :action_place %><br>
        <%= f.text_field :action_place, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :action_result %><br>
        <%= f.text_field :action_result, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('work_attributes', company: @answer.company.capitalize) %></div>
    <div class="panel-body">
      <div class="form-inline">
        <%= f.select :work_attribute_1, [], {}, class: 'form-control' %>
        <%= f.number_field :work_attribute_value_1, class: 'form-control', in: 0..10 %>
      </div>
      <div class="form-inline">
        <%= f.select :work_attribute_2, [], {}, class: 'form-control' %>
        <%= f.number_field :work_attribute_value_2, class: 'form-control', in: 0..10 %>
      </div>
      <div class="form-inline">
        <%= f.select :work_attribute_3, [], {}, class: 'form-control' %>
        <%= f.number_field :work_attribute_value_3, class: 'form-control', in: 0..10 %>
      </div>
      <div class="form-inline">
        <%= f.select :work_attribute_4, [], {}, class: 'form-control' %>
        <%= f.number_field :work_attribute_value_4, class: 'form-control', in: 0..10 %>
      </div>
      <div class="form-inline">
        <%= f.select :work_attribute_5, [], {}, class: 'form-control' %>
        <%= f.number_field :work_attribute_value_5, class: 'form-control', in: 0..10 %>
      </div>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('work_attribute_selected') %></div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.select :work_attribute_selected_index, [], {}, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= t('commitment') %></div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :commitment_action %><br>
        <%= f.text_field :commitment_action, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :commitment_date %><br>
        <%= f.date_select :commitment_date %>
      </div>
      <div class="form-group">
        <%= f.label :commitment_time %><br>
        <%= f.time_select :commitment_time %>
      </div>
      <div class="form-group">
      </div>
      <div class="actions">
        <%= f.submit t('submit') %>
      </div>
    </div>
  </div>
<% end %>
